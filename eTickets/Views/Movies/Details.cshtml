@* Define Model *@
@model Movie

@* Define ViewData *@
@{
    ViewData["Title"] = Model.Name + "Details";
}

<div class="row">

    <div class="col-md-8 offset-2">
        <div class="card mb-12">

            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">

                            <h5 class="card-title">
                                @Model.Name

                                @* <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a> *@

                            </h5>

                        </p>

                    </div>

                </div>
                <div class="col-md-4">

                    <img src="@Model.ImageURL" width="100%" alt="@Model.Name" />

                </div>

                <div class="col-md-8">
                    <div class="card-body">

                        <p class="card-text">@Model.Description</p>
                        <p class="card-text"> <b>Cinema: </b>@Model.Cinema.Name</p>
                        <p class="card-text"> <b>Category: </b>@Model.MovieCategory</p>
                        <p class="card-text"> <b>Start Date: </b>@Model.StartDate.ToString("dd MMM yy")</p>
                        <p class="card-text"> <b>End Date: </b> @Model.EndtDate.ToString("dd MMM yy")</p>

                        <p class="card-text">

                            <b>status: </b>
                            @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndtDate)
                            {
                                <span class="badge bg-success text-white">AVAILABLE</span>
                            }
                            else if (DateTime.Now > Model.EndtDate)
                            {
                                <span class="badge bg-danger text-white">EXPIRED</span>
                            }
                            else
                            {
                                <span class="badge bg-primary text-white">UPCOMING</span>
                            }

                        </p>
                        <p class="card-text">
                            <hr />
                            <b>Actors </b>
                            
                            <div class="row mt-4">

                                @foreach (var actor in Model.Actors_Movies)
                                {
                                    <div class="column text-center">
                                        <img src="@actor.Actor.ProfilePicURL" alt="@actor.Actor.FullName" class="border-info rounded-circle" style="max-width:150px;" />
                                        <br />
                                       <a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.ActorID">@actor.Actor.FullName</a>
                                    </div>
                                }

                            </div>

                        </p>


                    </div>
                </div>

                <div class="col-md-12">
                    <div class="card-footer">

                        <p class="card-text">

                            <a class="btn btn-outline-primary float-right" asp-action="Index"> Back</a>
                            <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@Model.ID"> <i class="bi bi-cart-plus"></i>Add to Cart (Price @Model.Price.ToString("c"))</a>

                        </p>

                    </div>

                </div>

            </div>

        </div>


    </div>


</div>
