@* Define Model *@
@model IEnumerable<Actor>

@* Define ViewData *@
@{
    ViewData["Title"] = "List Of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>

                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProfilePicURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                   
                </tr>

            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">

                            <img class="rounded-circle" src="@item.ProfilePicURL" style="max-width: 150px" />

                        </td>

                        <td class="align-middle">

                            @item.FullName

                        </td>

                        <td class="align-middle">

                            @item.Bio.Substring(0, Math.Min(80, item.Bio.Length))

                        </td>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <td class="align-middle">

                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID"> <i class="bi bi-pencil-square"></i>Edit</a>
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.ID"> <i class="bi bi-eye"></i>View</a>
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ID"> <i class="bi bi-trash"></i>Delete</a>

                            </td>
                        }

                       


                    </tr>
                }

            </tbody>

        </table>

    </div>

</div>
@await Html.PartialAsync("_CreateItem", "Actors")
