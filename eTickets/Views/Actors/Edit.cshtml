@model Actor

@{
    ViewData["Title"] = "Edit actor";
}

<div class="row">
    <div class="col-md-8 offset-2">

        <h1 class="mb-4">Edit actor details</h1>

        <form asp-action="Edit" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group text-center">

                <img id="ProfilePicturePreview" />

            </div>

            <div class="form-group">
                <label asp-for="profilePicURL"></label>
                <input asp-for="profilePicURL" class="form-control" />
                <span asp-validation-for="profilePicURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fullname"></label>
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="profilePicURL" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bio"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="profilePicURL" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
 
    <script>
        $("#profilePicURL").on("change", function () {
                var output = document.getElementById("ProfilePicturePreview");
                output.src = $(this).val();
            });
    </script>
}





