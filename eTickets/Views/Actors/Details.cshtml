@model Actor

@{
    ViewData["Title"] = "Details of the actor";
}

<div class="row">
    <div class="col-md-8 offset-2">

        <h1 class="mb-4">Details of @Model.FullName</h1>

        <div class="form-group text-center">

            <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" />

        </div>

        <div class="form-group">
            <label asp-for="ProfilePicURL"></label>
            <input asp-for="ProfilePicURL" class="form-control" readonly />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" readonly />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bio"></label>
            <input asp-for="Bio" class="form-control" readonly />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <a class="btn btn-outline-info float-right" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Show All</a>
        </div>


    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function(){
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#profilePicURL").val();
        })

        // $("#profilePicURL").on("change", function () {
        //         var output = document.getElementById("ProfilePicturePreview");
        //         output.src = $(this).val();
        //     });
    </script>
}






