@model Actor

@{
    ViewData["Title"] = "Delete actor";
}

<div class="row">
    <div class="col-md-8 offset-2">

        <h1 class="mb-4">Delete @Model.FullName ?</h1>

        <div class="form-group text-center">

            <img id="ProfilePicturePreview" />

        </div>

        <div class="form-group">
            <label asp-for="ProfilePicURL"></label>
            <input asp-for="ProfilePicURL" class="form-control" readonly />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" readonly />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bio"></label>
            <input asp-for="Bio" class="form-control" readonly />
            <span asp-validation-for="ProfilePicURL" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <form asp-action="Delete">

                <input type="hidden" asp-for = "ID" />
                <input type="submit" value="Confirm" class="btn btn-danger float-right" />


            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>


    </div>
</div>

@section Scripts {

    <script>
        $(document).ready(function(){
            var output = document.getElementById("ProfilePicturePreview");
            output.src = $("#profilePicURL").val();
        })

        // $("#profilePicURL").on("change", function () {
        //         var output = document.getElementById("ProfilePicturePreview");
        //         output.src = $(this).val();
        //     });
    </script>
}






